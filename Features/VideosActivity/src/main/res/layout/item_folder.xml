<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Leading Icon (folder thumbnail) -->
    <ImageView
        android:id="@+id/folder_icon"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/folder_thumb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/space_grotesk_bold"
            android:maxLines="2"
            android:textSize="@dimen/_14sdp"
            tools:ignore="SpUsage"
            tools:text="Folder 1" />

        <TextView
            android:id="@+id/folder_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:textSize="@dimen/_10sdp"
            tools:ignore="SpUsage"
            tools:text="/storage/emulated/0/DCIM/Camera/Live Photos" />

        <LinearLayout
            android:id="@+id/info_chips_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>