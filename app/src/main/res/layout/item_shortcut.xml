<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:background="@drawable/background_shortcut_item"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:paddingHorizontal="@dimen/_20sdp"
    android:paddingVertical="@dimen/_8sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/shortcut_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@null"
        android:tint="#FF585E71"
        tools:src="@drawable/ic_file_open" />

    <TextView
        android:id="@+id/shortcut_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/space_grotesk_bold"
        android:textColor="#FF585E71"
        android:textSize="14sp"
        tools:text="1234566789" />
</LinearLayout>